# =============================================================================
# Agent Ops Backend Configuration
# =============================================================================

# Server Configuration
PORT=3001
HOST=0.0.0.0
NODE_ENV=development
BASE_URL=http://localhost:3001

# Database (SQLite)
DATABASE_URL=sqlite://./agent-ops.db

# GitHub OAuth (required for GitHub integration)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:3001/api/auth/github/callback
GITHUB_WEBHOOK_SECRET=your-webhook-secret

# Anthropic API (for Claude agents)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Concurrency Limits
MAX_GLOBAL_WORKERS=10
MAX_WORKERS_PER_REPO=3
MAX_WORKERS_PER_USER=5

# Agent Runtime
WORKSPACE_BASE_DIR=/tmp/agent-workspaces
MAX_CONCURRENT_AGENTS=5
AGENT_TIMEOUT_MS=600000
CLAUDE_MODEL=claude-sonnet-4-20250514

# LLM Provider Configuration (ollama, openai, anthropic, openrouter)
LLM_PROVIDER=ollama
LLM_MODEL=qwen2.5-coder:7b
LLM_BASE_URL=http://localhost:11434
# LLM_API_KEY=your-api-key-if-needed
